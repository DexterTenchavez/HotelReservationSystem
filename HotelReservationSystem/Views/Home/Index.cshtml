@functions {
    // Helper function to get room image based on room type and number
    private string GetRoomImage(string roomType, string roomNumber)
    {
        if (string.IsNullOrEmpty(roomType) || string.IsNullOrEmpty(roomNumber))
            return "/images/placeholder-room.jpg";

        try
        {
            // Extract room number suffix for image selection
            var roomNum = roomNumber.Replace("Room ", "").Trim();

            // Map room numbers to image numbers (1, 2, or 3)
            int roomNumberInt;
            if (int.TryParse(roomNum, out roomNumberInt))
            {
                var imageNumber = ((roomNumberInt - 1) % 3) + 1; // This will give 1, 2, or 3
                return $"/images/{roomType.ToLower()}{imageNumber}.jpg";
            }
            else
            {
                // Fallback if room number parsing fails
                return $"/images/{roomType.ToLower()}1.jpg";
            }
        }
        catch
        {
            return "/images/placeholder-room.jpg";
        }
    }
}

@section Scripts {
    <script>
        // Global function to handle image errors
        function handleImageError(img) {
            console.log('Image failed to load:', img.src);

            // If already trying placeholder, use SVG
            if (img.src.includes('placeholder-room.jpg') || img.getAttribute('data-error-handled')) {
                // Create a nice SVG placeholder
                const svgPlaceholder = 'data:image/svg+xml;base64,';
                img.src = svgPlaceholder;
                img.alt = 'Room image not available';
                return;
            }

            img.setAttribute('data-error-handled', 'true');

            // Try placeholder image
            img.src = '/images/placeholder-room.jpg';
        }

        document.addEventListener('DOMContentLoaded', function() {
            const roomCards = document.querySelectorAll('.room-card-clickable');

            roomCards.forEach(card => {
                card.addEventListener('click', function() {
                    const roomId = this.dataset.roomId;
                    window.location.href = `@Url.Action("Create", "Home")?roomId=${roomId}`;
                });
            });

            const filterButtons = document.querySelectorAll('.filter-btn');
            const roomItems = document.querySelectorAll('.room-card-item');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    const filter = this.dataset.filter;

                    roomItems.forEach(item => {
                        if (filter === 'all' || item.dataset.roomType === filter) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });

            roomCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'all 0.3s ease';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}

