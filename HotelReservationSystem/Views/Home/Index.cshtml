@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var availableRooms = ViewData["AvailableRooms"] as List<HotelReservationSystem.Models.Room> ?? new List<HotelReservationSystem.Models.Room>();
}

<div class="modal fade" id="doubleBookingModal" tabindex="-1" aria-labelledby="doubleBookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="doubleBookingModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Active Reservation Found
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>You already have an active reservation!</strong>
                </div>
                <p class="mb-3">You currently have a reservation with status: <strong><span id="currentReservationStatus"></span></strong></p>
                <p class="text-muted small">
                    To book another room, you'll need to either:
                    <ul class="small">
                        <li>Cancel your current reservation first</li>
                        <li>Wait until your current stay is completed</li>
                        <li>Or proceed with booking another room</li>
                    </ul>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="/Account/UserDashboard" class="btn btn-primary">
                    <i class="fas fa-eye me-2"></i>View My Reservations
                </a>
                <button type="button" class="btn btn-success" id="proceedAnywayBtn">
                    <i class="fas fa-arrow-right me-2"></i>Proceed Anyway
                </button>
            </div>
        </div>
    </div>
</div>

<div class="stats-grid">
    <div class="stat-item">
        <span class="stat-number">
            <i class="fas fa-calendar-check text-primary me-2"></i>
            My Reservations
        </span>
        <span class="stat-label">Manage your bookings</span>
    </div>
    <div class="stat-item">
        <span class="stat-number">
            <i class="fas fa-king-bed text-success me-2"></i>
            @availableRooms.Count Available Rooms
        </span>
        <span class="stat-label">Choose your perfect stay</span>
    </div>
    <div class="stat-item">
        <span class="stat-number">
            <i class="fas fa-concierge-bell text-info me-2"></i>
            24/7 Service
        </span>
        <span class="stat-label">Always available</span>
    </div>
    <div class="stat-item">
        <span class="stat-number">
            <i class="fas fa-star text-warning me-2"></i>
            5-Star Rating
        </span>
        <span class="stat-label">Excellence guaranteed</span>
    </div>
</div>

<div class="section-card mt-5">
    <div class="section-header">
        <i class="fas fa-bed me-2"></i>
        <h5 class="mb-0">All Available Rooms (@availableRooms.Count)</h5>
    </div>
    <div class="section-body">
        <p class="text-muted mb-4">Click on any room to book your stay</p>

        <div class="room-filter mb-4">
            <div class="filter-buttons">
                <button type="button" class="filter-btn active" data-filter="all">All Rooms</button>
                <button type="button" class="filter-btn" data-filter="Single">Single Rooms</button>
                <button type="button" class="filter-btn" data-filter="Double">Double Rooms</button>
                <button type="button" class="filter-btn" data-filter="Suite">Luxury Suites</button>
            </div>
        </div>

        <div class="row g-4" id="roomCardsContainer">
            @foreach (var room in availableRooms)
            {
                <div class="col-xl-4 col-lg-6 col-md-6 room-card-item" data-room-type="@room.RoomType">
                    <div class="room-card-clickable" data-room-id="@room.RoomId">
                        <div class="room-card-image">
                            <img src="@room.DisplayImageUrl"
                                 alt="@room.RoomType Room @room.RoomNumber"
                                 class="room-image"
                                 onerror="handleImageError(this)">
                            <div class="room-type-badge">@room.RoomType</div>
                            <div class="room-overlay">
                                <span class="view-details">Click to Book</span>
                            </div>
                        </div>
                        <div class="room-card-content">
                            <div class="room-header">
                                <h4 class="room-number">Room @room.RoomNumber</h4>
                                <div class="room-price">
                                    <span class="price-amount">₱@room.PricePerNight.ToString("N0")</span>
                                    <span class="price-period">/ night</span>
                                </div>
                            </div>

                            <p class="room-description">@room.Description</p>

                            <div class="room-rating mb-3">
                                <div class="rating-stars">
                                    @for (int i = 1; i <= room.FullStars; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    @if (room.HasHalfStar)
                                    {
                                        <i class="fas fa-star-half-alt text-warning"></i>
                                    }
                                    @for (int i = 1; i <= room.EmptyStars; i++)
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                </div>
                                <span class="rating-text">
                                    @room.AverageRating.ToString("0.0")
                                    @if (room.TotalRatings > 0)
                                    {
                                        <small class="text-muted">(@room.TotalRatings reviews)</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">(No reviews yet)</small>
                                    }
                                </span>
                            </div>

                            <div class="room-features">
                                <div class="feature">
                                    <i class="fas fa-users"></i>
                                    <span>@room.MaxGuests Guest@(room.MaxGuests > 1 ? "s" : "")</span>
                                </div>
                                @if (!string.IsNullOrEmpty(room.Features))
                                {
                                    var features = room.Features.Split(',');
                                    foreach (var feature in features.Take(3))
                                    {
                                        <div class="feature">
                                            <i class="fas fa-check"></i>
                                            <span>@feature.Trim()</span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="feature">
                                        <i class="fas fa-wifi"></i>
                                        <span>Free WiFi</span>
                                    </div>
                                    <div class="feature">
                                        <i class="fas fa-tv"></i>
                                        <span>TV</span>
                                    </div>
                                    <div class="feature">
                                        <i class="fas fa-snowflake"></i>
                                        <span>Air Conditioning</span>
                                    </div>
                                }
                            </div>

                            <div class="room-footer">
                                <div class="book-now-btn">
                                    <i class="fas fa-arrow-right"></i>
                                    <span>Book This Room</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function handleImageError(img) {
            console.log('Image failed to load:', img.src);
            if (img.src.includes('placeholder-room.jpg') || img.getAttribute('data-error-handled')) {
                const svgPlaceholder = 'data:image/svg+xml;base64,';
                img.src = svgPlaceholder;
                img.alt = 'Room image not available';
                return;
            }
            img.setAttribute('data-error-handled', 'true');
            img.src = '/images/placeholder-room.jpg';
        }

        async function checkActiveReservations() {
            try {
                const response = await fetch('@Url.Action("CheckActiveReservations", "Home")');
                const result = await response.json();

                if (result.hasActiveReservation) {
                    return {
                        hasActive: true,
                        status: result.status,
                        reservationNo: result.reservationNo
                    };
                }
                return { hasActive: false };
            } catch (error) {
                console.error('Error checking reservations:', error);
                return { hasActive: false };
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const roomCards = document.querySelectorAll('.room-card-clickable');
            const doubleBookingModal = new bootstrap.Modal(document.getElementById('doubleBookingModal'));
            let currentRoomId = null;

            roomCards.forEach(card => {
                card.addEventListener('click', async function() {
                    const roomId = this.getAttribute('data-room-id');
                    currentRoomId = roomId;

                    const reservationCheck = await checkActiveReservations();

                    if (reservationCheck.hasActive) {
                        document.getElementById('currentReservationStatus').textContent = reservationCheck.status;
                        doubleBookingModal.show();
                    } else {
                        proceedToBooking(roomId);
                    }
                });
            });

            document.getElementById('proceedAnywayBtn').addEventListener('click', function() {
                if (currentRoomId) {
                    doubleBookingModal.hide();
                    proceedToBooking(currentRoomId);
                }
            });

            function proceedToBooking(roomId) {
                window.location.href = '/Home/Create?roomId=' + roomId;
            }

            const filterButtons = document.querySelectorAll('.filter-btn');
            const roomItems = document.querySelectorAll('.room-card-item');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    const filter = this.getAttribute('data-filter');

                    roomItems.forEach(item => {
                        if (filter === 'all' || item.getAttribute('data-room-type') === filter) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });

            roomCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'all 0.3s ease';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}

