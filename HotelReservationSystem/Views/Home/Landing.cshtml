@{
    ViewData["Title"] = "Grand Hotel - Luxury Redefined";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grand Hotel - Luxury Redefined</title>
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Discount Banner -->
    <div class="discount-banner">
        <div class="discount-content">
            <span>SPECIAL OFFER: Book now and get <span class="discount-highlight">25% OFF</span> your entire stay!</span>
            <div class="limited-time">Limited time only. Use code: GRAND25</div>
        </div>
        <button class="discount-close" onclick="this.parentElement.style.display='none'">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <!-- Simple Header with Auth Buttons -->
    <header class="simple-header">
        <div class="header-container">
            <div class="logo">
                <h2><i class="fas fa-crown me-2"></i>Grand Hotel</h2>
            </div>
            <div class="auth-buttons">
                <a href="/Account/Login" class="btn-login">Sign In</a>
                <a href="/Account/Register" class="btn-register">Create Account</a>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-overlay"></div>
        </div>
        <div class="hero-content">
            <h1 class="hero-title">Experience Luxury Redefined</h1>
            <p class="hero-subtitle">Where timeless elegance meets modern comfort in the heart of the city</p>
            <div class="hero-actions">
                <a href="/Account/Register" class="btn-primary">Get Started</a>
                <a href="/Account/Login" class="btn-secondary">Sign In</a>
            </div>
            <div class="discount-reference">
                <i class="fas fa-gift me-1"></i> Special 25% discount for new bookings
            </div>
        </div>
    </section>

    <!-- Rooms Section -->
    <section class="rooms-section">
        <div class="container">
            <div class="section-header">
                <h2>Our Luxury Rooms</h2>
                <p>Experience unparalleled comfort in our carefully designed accommodations</p>
            </div>
            <div class="rooms-grid">
                <div class="room-card">
                    <div class="room-image">
                        <img src="https://images.unsplash.com/photo-1611892440504-42a792e24d32?w=400&h=300&fit=crop" alt="Deluxe Room">
                        <div class="room-badge">Most Popular</div>
                    </div>
                    <div class="room-content">
                        <h3>Deluxe Room</h3>
                        <p class="room-description">Spacious room with city view, king-sized bed, and modern amenities</p>
                        <div class="room-features">
                            <span><i class="fas fa-wifi"></i> Free WiFi</span>
                            <span><i class="fas fa-tv"></i> Smart TV</span>
                            <span><i class="fas fa-coffee"></i> Coffee Maker</span>
                        </div>
                        <div class="room-price">
                            <span class="original-price">$299</span>
                            <span class="discount-price">$224/night</span>
                            <span class="discount-tag">25% OFF</span>
                        </div>
                        <a href="/Account/Register" class="btn-book">Book Now</a>
                    </div>
                </div>

                <div class="room-card">
                    <div class="room-image">
                        <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=400&h=300&fit=crop" alt="Executive Suite">
                        <div class="room-badge premium">Premium</div>
                    </div>
                    <div class="room-content">
                        <h3>Executive Suite</h3>
                        <p class="room-description">Luxurious suite with separate living area and panoramic views</p>
                        <div class="room-features">
                            <span><i class="fas fa-hot-tub"></i> Jacuzzi</span>
                            <span><i class="fas fa-couch"></i> Living Room</span>
                            <span><i class="fas fa-utensils"></i> Mini Bar</span>
                        </div>
                        <div class="room-price">
                            <span class="original-price">$499</span>
                            <span class="discount-price">$374/night</span>
                            <span class="discount-tag">25% OFF</span>
                        </div>
                        <a href="/Account/Register" class="btn-book">Book Now</a>
                    </div>
                </div>

                <div class="room-card">
                    <div class="room-image">
                        <img src="https://images.unsplash.com/photo-1566665797739-1674de7a421a?w=400&h=300&fit=crop" alt="Presidential Suite">
                        <div class="room-badge luxury">Luxury</div>
                    </div>
                    <div class="room-content">
                        <h3>Presidential Suite</h3>
                        <p class="room-description">Ultimate luxury with private balcony, dining area, and butler service</p>
                        <div class="room-features">
                            <span><i class="fas fa-infinity"></i> Private Pool</span>
                            <span><i class="fas fa-chess-queen"></i> Butler Service</span>
                            <span><i class="fas fa-wine-glass-alt"></i> Wine Cellar</span>
                        </div>
                        <div class="room-price">
                            <span class="original-price">$899</span>
                            <span class="discount-price">$674/night</span>
                            <span class="discount-tag">25% OFF</span>
                        </div>
                        <a href="/Account/Register" class="btn-book">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Advertisement Section -->
    <section class="advertisement-section">
        <div class="container">
            <div class="ad-content">
                <div class="ad-text">
                    <h2>🎉 Summer Special Offer!</h2>
                    <h3>Get <span class="discount-text">25% OFF</span> + Free Breakfast</h3>
                    <p class="ad-description">Book your luxury stay today and enjoy exclusive benefits including:</p>
                    <ul class="ad-benefits">
                        <li><i class="fas fa-check"></i> 25% discount on all room types</li>
                        <li><i class="fas fa-check"></i> Complimentary breakfast for two</li>
                        <li><i class="fas fa-check"></i> Free spa access</li>
                        <li><i class="fas fa-check"></i> Late checkout until 2 PM</li>
                    </ul>
                    <div class="ad-timer">
                        <div class="timer-title">Offer ends in:</div>
                        <div class="timer-display">
                            <div class="timer-unit">
                                <span class="timer-number" id="days">07</span>
                                <span class="timer-label">Days</span>
                            </div>
                            <div class="timer-unit">
                                <span class="timer-number" id="hours">23</span>
                                <span class="timer-label">Hours</span>
                            </div>
                            <div class="timer-unit">
                                <span class="timer-number" id="minutes">45</span>
                                <span class="timer-label">Minutes</span>
                            </div>
                        </div>
                    </div>
                    <div class="ad-actions">
                        <a href="/Account/Register" class="btn-ad-primary">
                            <i class="fas fa-bolt me-2"></i>Book Now & Save 25%
                        </a>
                        <div class="promo-code">
                            <span>Use promo code: <strong>GRAND25</strong></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Hotel Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="section-header">
                <h2>Hotel Amenities</h2>
                <p>World-class facilities for an unforgettable stay</p>
            </div>
            <div class="features-grid">
                <div class="feature-item">
                    <i class="fas fa-swimming-pool"></i>
                    <h4>Infinity Pool</h4>
                    <p>Stunning rooftop pool with panoramic city views</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-spa"></i>
                    <h4>Luxury Spa</h4>
                    <p>Rejuvenating treatments and wellness therapies</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-utensils"></i>
                    <h4>Fine Dining</h4>
                    <p>Award-winning restaurants with gourmet cuisine</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-dumbbell"></i>
                    <h4>Fitness Center</h4>
                    <p>State-of-the-art gym with personal trainers</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Simple Footer -->
    <footer class="simple-footer">
        <div class="container">
            <p>&copy; 2024 Grand Hotel. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Countdown timer
        function updateCountdown() {
            const now = new Date();
            const target = new Date();
            target.setDate(now.getDate() + 7);

            const difference = target - now;

            const days = Math.floor(difference / (1000 * 60 * 60 * 24));
            const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));

            document.getElementById('days').textContent = days.toString().padStart(2, '0');
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
        }

        setInterval(updateCountdown, 1000);
        updateCountdown();

        // Auto-hide discount banner after 10 seconds
        setTimeout(function() {
            const banner = document.querySelector('.discount-banner');
            if (banner) {
                banner.style.opacity = '0';
                banner.style.transition = 'opacity 0.5s ease';
                setTimeout(function() {
                    banner.style.display = 'none';
                }, 500);
            }
        }, 10000);
    </script>
</body>
</html>