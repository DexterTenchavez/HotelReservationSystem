@{
    ViewData["Title"] = "Grand Hotel - Luxury Redefined";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grand Hotel - Luxury Redefined</title>
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Simple Header with Auth Buttons -->
    <header class="simple-header">
        <div class="header-container">
            <div class="logo">
                <h2><i class="fas fa-crown me-2"></i>Grand Hotel</h2>
            </div>
            <div class="auth-buttons">
                <a href="/Account/Login" class="btn-login">Sign In</a>
                <a href="/Account/Register" class="btn-register">Create Account</a>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-overlay"></div>
        </div>
        <div class="hero-content">
            <h1 class="hero-title">Experience Luxury Redefined</h1>
            <p class="hero-subtitle">Where timeless elegance meets modern comfort in the heart of the city</p>
            <div class="hero-actions">
                <a href="/Account/Register" class="btn-primary">Get Started</a>
                <a href="/Account/Login" class="btn-secondary">Sign In</a>
            </div>
        </div>
    </section>

    <!-- Simple Footer -->
    <footer class="simple-footer">
        <div class="container">
            <p>&copy; 2024 Grand Hotel. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Simple smooth scrolling for any anchor links
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>