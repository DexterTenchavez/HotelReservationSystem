@model HotelReservationSystem.Models.Reservation
@{
    ViewData["Title"] = "Edit Reservation - Admin";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<div class="container form-container">
    <div class="form-card">
        <div class="form-header">
            <h2><i class="fas fa-edit me-2"></i>Edit Reservation - Admin</h2>
            <p class="mb-0 mt-2">Update reservation details as administrator</p>
        </div>
        <div class="form-body">
            <form asp-action="Edit" asp-controller="Home" method="post" id="reservationForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReservationId" />
                <input type="hidden" asp-for="ReservationNo" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="RoomId" />
                <input type="hidden" asp-for="RoomNumber" />
                <input type="hidden" asp-for="RoomType" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-user-circle me-2"></i>
                        <h5 class="mb-0">Guest Information</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Reservation Number</label>
                                <input asp-for="ReservationNo" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Guest Name <span class="text-danger">*</span></label>
                                <input asp-for="GuestName" class="form-control" required />
                                <span asp-validation-for="GuestName" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-bed me-2"></i>
                        <h5 class="mb-0">Selected Room</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Room Type</label>
                                <input asp-for="RoomType" class="form-control" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Room Number</label>
                                <input asp-for="RoomNumber" class="form-control" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Price Per Night</label>
                                @{
                                    var pricePerNight = Model.TotalAmount / (Model.NumberOfNights > 0 ? Model.NumberOfNights : 1);
                                }
                                <input value="₱@pricePerNight.ToString("N0")" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-calendar-alt me-2"></i>
                        <h5 class="mb-0">Stay Details</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Number of Guests <span class="text-danger">*</span></label>
                                <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" max="10" required />
                                <span asp-validation-for="NumberOfGuests" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Number of Nights <span class="text-danger">*</span></label>
                                <input asp-for="NumberOfNights" class="form-control" type="number" min="1" required readonly />
                                <span asp-validation-for="NumberOfNights" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Check-in Date <span class="text-danger">*</span></label>
                                <input asp-for="CheckInDate" class="form-control" type="date" required />
                                <span asp-validation-for="CheckInDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Check-out Date <span class="text-danger">*</span></label>
                                <input asp-for="CheckOutDate" class="form-control" type="date" required />
                                <span asp-validation-for="CheckOutDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-credit-card me-2"></i>
                        <h5 class="mb-0">Payment Information</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Payment Method</label>
                                <input asp-for="PaymentMethod" class="form-control bg-light" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Payment Status</label>
                                <input asp-for="PaymentStatus" class="form-control bg-light" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-info-circle me-2"></i>
                        <h5 class="mb-0">Reservation Status</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Checked-In">Checked-In</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                    <option value="Pending">Pending</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Total Amount</label>
                                <div class="total-amount-display">
                                    <span id="TotalAmountDisplay" class="h4 text-primary">₱@Model.TotalAmount.ToString("N0")</span>
                                    <small class="text-muted d-block" id="AmountBreakdown"></small>
                                </div>
                                <input type="hidden" asp-for="TotalAmount" id="totalAmount" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <a asp-action="AdminDashboard" asp-controller="Account" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                    </a>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Save Changes
                        </button>
                        <a asp-action="AdminDashboard" asp-controller="Account" class="btn btn-outline-danger">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checkInDate = document.querySelector('input[name="CheckInDate"]');
            const checkOutDate = document.querySelector('input[name="CheckOutDate"]');
            const numberOfNights = document.querySelector('input[name="NumberOfNights"]');
            const totalAmountDisplay = document.getElementById('TotalAmountDisplay');
            const amountBreakdown = document.getElementById('AmountBreakdown');
            const totalAmountInput = document.getElementById('totalAmount');

            // Calculate price per night from existing total
            const currentTotal = @Model.TotalAmount;
            const currentNights = @Model.NumberOfNights;
            const pricePerNight = currentNights > 0 ? currentTotal / currentNights : currentTotal;

            function calculateBookingDetails() {
                if (checkInDate.value && checkOutDate.value) {
                    const checkIn = new Date(checkInDate.value);
                    const checkOut = new Date(checkOutDate.value);

                    if (checkOut > checkIn) {
                        const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                        numberOfNights.value = nights;

                        const totalAmount = pricePerNight * nights;
                        totalAmountDisplay.textContent = '₱' + totalAmount.toLocaleString();
                        totalAmountInput.value = totalAmount;
                        amountBreakdown.textContent = `${nights} night${nights > 1 ? 's' : ''} × ₱${pricePerNight.toLocaleString()}/night`;
                    } else {
                        numberOfNights.value = 1;
                        totalAmountDisplay.textContent = '₱' + pricePerNight.toLocaleString();
                        totalAmountInput.value = pricePerNight;
                        amountBreakdown.textContent = `1 night × ₱${pricePerNight.toLocaleString()}/night`;
                    }
                }
            }

            calculateBookingDetails();

            checkInDate.addEventListener('change', calculateBookingDetails);
            checkOutDate.addEventListener('change', calculateBookingDetails);
        });
    </script>
}