@model HotelReservationSystem.Models.Reservation
@{
    ViewData["Title"] = "Create Reservation";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    int maxGuests = ViewData["MaxGuests"] as int? ?? 2;
    string roomType = ViewData["RoomType"] as string ?? "Room";
    var selectedRoom = ViewData["SelectedRoom"] as HotelReservationSystem.Models.Room;
}

<div class="container form-container">
    <div class="form-card">
        <div class="form-header">
            <h2><i class="fas fa-calendar-plus me-2"></i>Create New Reservation</h2>
            <p class="mb-0 mt-2">Complete your reservation details for the selected room</p>
        </div>
        <div class="form-body">
            <form asp-action="Create" method="post" id="reservationForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-user-circle me-2"></i>
                        <h5 class="mb-0">Guest Information</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Reservation Number</label>
                                <input asp-for="ReservationNo" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Guest Name <span class="text-danger">*</span></label>
                                <input asp-for="GuestName" class="form-control" required />
                                <span asp-validation-for="GuestName" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-bed me-2"></i>
                        <h5 class="mb-0">Selected Room</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Room Type</label>
                                <input asp-for="RoomType" class="form-control" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Room Number</label>
                                <input asp-for="RoomNumber" class="form-control" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Max Guests</label>
                                <input value="@maxGuests Guest@(maxGuests > 1 ? "s" : "")" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Price Per Night</label>
                                <input value="₱@Model.TotalAmount.ToString("N0")" class="form-control" readonly />
                            </div>
                        </div>
                        <input type="hidden" asp-for="RoomId" />
                        <input type="hidden" asp-for="TotalAmount" id="PricePerNight" />
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-calendar-alt me-2"></i>
                        <h5 class="mb-0">Stay Details</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Number of Guests <span class="text-danger">*</span></label>
                                <input asp-for="NumberOfGuests" class="form-control"
                                       type="number" min="1" max="@maxGuests"
                                       required
                                       onchange="validateGuestCount()" />
                                <span asp-validation-for="NumberOfGuests" class="text-danger small"></span>
                                <small class="form-text text-muted">
                                    Maximum @maxGuests guest@(maxGuests > 1 ? "s" : "") allowed for this @roomType
                                </small>
                                <div id="guestCountError" class="text-danger small mt-1" style="display: none;">
                                    This room can only accommodate up to @maxGuests guest@(maxGuests > 1 ? "s" : "")
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Number of Nights <span class="text-danger">*</span></label>
                                <input asp-for="NumberOfNights" class="form-control" type="number" min="1" required readonly />
                                <span asp-validation-for="NumberOfNights" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Check-in Date <span class="text-danger">*</span></label>
                                <input asp-for="CheckInDate" class="form-control" type="date"
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="CheckInDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Check-out Date <span class="text-danger">*</span></label>
                                <input asp-for="CheckOutDate" class="form-control" type="date"
                                       min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="CheckOutDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-card mb-4">
                    <div class="section-header">
                        <i class="fas fa-credit-card me-2"></i>
                        <h5 class="mb-0">Payment Information</h5>
                    </div>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Payment Method <span class="text-danger">*</span></label>
                                <select asp-for="PaymentMethod" class="form-select" id="paymentMethodSelect" required>
                                    <option value="">-- Select Payment Method --</option>
                                    <option value="Credit Card">Credit Card</option>
                                    <option value="Debit Card">Debit Card</option>
                                    <option value="PayPal">PayPal</option>
                                    <option value="GCash">GCash</option>
                                    <option value="Bank Transfer">Bank Transfer</option>
                                    <option value="Cash">Cash</option>
                                </select>
                                <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Total Amount</label>
                                <div class="total-amount-display">
                                    <span id="TotalAmountDisplay" class="h4 text-primary">₱@Model.TotalAmount.ToString("N0")</span>
                                    <small class="text-muted d-block" id="AmountBreakdown"></small>
                                </div>
                            </div>
                        </div>

                        <div id="cashPaymentSection" class="alert alert-info" style="display: none;">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Cash Payment:</strong> Please pay at the hotel front desk.
                            An official receipt will be issued upon payment confirmation.
                        </div>

                        <div id="onlinePaymentSection" class="alert alert-warning" style="display: none;">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Online Payment:</strong> Complete your payment online.
                            The admin will confirm your payment with a reference number.
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Rooms
                    </a>
                    <button type="submit" class="btn btn-primary" id="submitButton">
                        <i class="fas fa-calendar-check me-1"></i>Confirm Reservation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checkInDate = document.querySelector('input[name="CheckInDate"]');
            const checkOutDate = document.querySelector('input[name="CheckOutDate"]');
            const numberOfNights = document.querySelector('input[name="NumberOfNights"]');
            const totalAmountDisplay = document.getElementById('TotalAmountDisplay');
            const amountBreakdown = document.getElementById('AmountBreakdown');
            const pricePerNight = @Model.TotalAmount;
            const maxGuests = @maxGuests;
            const paymentMethodSelect = document.getElementById('paymentMethodSelect');
            const onlinePaymentSection = document.getElementById('onlinePaymentSection');
            const cashPaymentSection = document.getElementById('cashPaymentSection');
            const submitButton = document.getElementById('submitButton');

            function validateGuestCount() {
                const guestCountInput = document.querySelector('input[name="NumberOfGuests"]');
                const guestCountError = document.getElementById('guestCountError');

                if (parseInt(guestCountInput.value) > maxGuests) {
                    guestCountError.style.display = 'block';
                    submitButton.disabled = true;
                    submitButton.classList.add('btn-disabled');
                } else {
                    guestCountError.style.display = 'none';
                    submitButton.disabled = false;
                    submitButton.classList.remove('btn-disabled');
                }
            }

            function calculateBookingDetails() {
                if (checkInDate.value && checkOutDate.value) {
                    const checkIn = new Date(checkInDate.value);
                    const checkOut = new Date(checkOutDate.value);

                    if (checkOut > checkIn) {
                        const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                        numberOfNights.value = nights;

                        const totalAmount = pricePerNight * nights;
                        totalAmountDisplay.textContent = '₱' + totalAmount.toLocaleString();
                        amountBreakdown.textContent = `${nights} night${nights > 1 ? 's' : ''} × ₱${pricePerNight.toLocaleString()}/night`;
                    } else {
                        numberOfNights.value = 1;
                        totalAmountDisplay.textContent = '₱' + pricePerNight.toLocaleString();
                        amountBreakdown.textContent = `1 night × ₱${pricePerNight.toLocaleString()}/night`;
                    }
                }
            }

            function togglePaymentSections() {
                const selectedMethod = paymentMethodSelect.value;

                onlinePaymentSection.style.display = 'none';
                cashPaymentSection.style.display = 'none';

                if (selectedMethod && selectedMethod !== 'Cash') {
                    onlinePaymentSection.style.display = 'block';
                } else if (selectedMethod === 'Cash') {
                    cashPaymentSection.style.display = 'block';
                }
            }

            document.getElementById('PricePerNight').value = pricePerNight;
            calculateBookingDetails();
            validateGuestCount();
            togglePaymentSections();

            checkInDate.addEventListener('change', calculateBookingDetails);
            checkOutDate.addEventListener('change', calculateBookingDetails);
            paymentMethodSelect.addEventListener('change', togglePaymentSections);

            const guestCountInput = document.querySelector('input[name="NumberOfGuests"]');
            guestCountInput.addEventListener('input', validateGuestCount);
            guestCountInput.addEventListener('change', validateGuestCount);
        });
    </script>

    <style>
        .btn-disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>
}