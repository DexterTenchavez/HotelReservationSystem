@model HotelReservationSystem.Models.Reservation
@{
    ViewData["Title"] = "Reservation Receipt";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<div class="container receipt-container">
    <div class="receipt-card">
        <div class="receipt-header">
            <h2><i class="fas fa-receipt me-2"></i>Reservation Confirmed</h2>
            <p class="mb-0">
                @if (Model.PaymentStatus == "Paid")
                {
                    <text>Thank you for your booking! Your payment has been processed successfully.</text>
                }
                else
                {
                    <text>Thank you for your booking! Please complete your payment.</text>
                }
            </p>
        </div>
        <div class="receipt-body">
            <div class="text-center mb-4">
                <div class="badge bg-success fs-6 p-3">
                    <i class="fas fa-check-circle me-2"></i>Booking Confirmed
                </div>
            </div>

            <table class="receipt-table">
                <tr>
                    <th>Reservation Number</th>
                    <td><strong class="text-primary">@Model.ReservationNo</strong></td>
                </tr>
                <tr>
                    <th>Transaction Number</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.TransactionNumber))
                        {
                            <strong class="text-info">@Model.TransactionNumber</strong>
                        }
                        else
                        {
                            <span class="text-muted">Not generated</span>
                        }
                    </td>
                </tr>

                <!-- ✅ ADDED: Official Receipt Number -->
                @if (!string.IsNullOrEmpty(Model.ReceiptNumber))
                {
                    <tr>
                        <th>Official Receipt No</th>
                        <td><strong class="text-success">@Model.ReceiptNumber</strong></td>
                    </tr>
                }

                <tr>
                    <th>Guest Name</th>
                    <td>@Model.GuestName</td>
                </tr>
                <tr>
                    <th>Room Type</th>
                    <td>
                        <span class="badge
                            @(Model.RoomType == "Suite" ? "bg-warning" :
                                                                                        Model.RoomType == "Double" ? "bg-info" : "bg-secondary")">
                            @Model.RoomType Room
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Room Number</th>
                    <td>@(Model.RoomNumber ?? "Not assigned")</td>
                </tr>
                <tr>
                    <th>Number of Guests</th>
                    <td>@Model.NumberOfGuests</td>
                </tr>
                <tr>
                    <th>Check-in Date</th>
                    <td>@Model.CheckInDate?.ToString("MMMM dd, yyyy")</td>
                </tr>
                <tr>
                    <th>Check-out Date</th>
                    <td>@Model.CheckOutDate?.ToString("MMMM dd, yyyy")</td>
                </tr>
                <tr>
                    <th>Number of Nights</th>
                    <td>@Model.NumberOfNights</td>
                </tr>
                <tr>
                    <th>Payment Method</th>
                    <td>
                        <span class="badge bg-info">@Model.PaymentMethod</span>
                    </td>
                </tr>
                <tr>
                    <th>Payment Status</th>
                    <td>
                        <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning")">
                            @Model.PaymentStatus
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Total Amount</th>
                    <td><strong class="text-success fs-5">₱@Model.TotalAmount.ToString("N2")</strong></td>
                </tr>
                <tr>
                    <th>Booking Date</th>
                    <td>@Model.CreatedDate.ToString("MMMM dd, yyyy")</td>
                </tr>
                @if (Model.PaymentDate.HasValue)
                {
                    <tr>
                        <th>Payment Date</th>
                        <td>@Model.PaymentDate.Value.ToString("MMMM dd, yyyy")</td>
                    </tr>
                }
            </table>

            <div class="alert @(Model.PaymentStatus == "Paid" ? "alert-success" : "alert-warning") mt-4">
                <h6>
                    <i class="fas fa-info-circle me-2"></i>
                    @if (Model.PaymentStatus == "Paid")
                    {
                        <text>Payment Confirmed</text>
                    }
                    else
                    {
                        <text>Payment Pending</text>
                    }
                </h6>
                <p class="mb-0 small">
                    @if (Model.PaymentStatus == "Paid" && !string.IsNullOrEmpty(Model.ReceiptNumber))
                    {
                        <text>
                            ✅ <strong>Payment confirmed!</strong> Official Receipt <strong>@Model.ReceiptNumber</strong>
                            serves as proof of payment. Please present this receipt at check-in.
                        </text>
                    }
                    else if (Model.PaymentStatus == "Paid")
                    {
                        <text>
                            ✅ <strong>Payment confirmed!</strong> Your transaction number
                            <strong>@Model.TransactionNumber</strong> serves as proof of payment.
                        </text>
                    }
                    else if (Model.PaymentMethod == "Cash")
                    {
                        <text>
                            Please pay <strong>₱@Model.TotalAmount.ToString("N2")</strong> in cash at the hotel front desk.
                            Your transaction number <strong>@Model.TransactionNumber</strong> will be confirmed with an official receipt upon payment.
                        </text>
                    }
                    else
                    {
                        <text>
                            Please complete your payment. Your transaction number <strong>@Model.TransactionNumber</strong>
                            will be confirmed once payment is processed.
                        </text>
                    }
                </p>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Create" asp-controller="Home" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-1"></i>Book Another Room
                </a>
                <div class="action-buttons">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="AdminDashboard" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    }
                    else
                    {
                        <a asp-action="UserDashboard" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="fas fa-user me-1"></i>My Dashboard
                        </a>
                    }
                    <button onclick="window.print()" class="btn btn-outline-info">
                        <i class="fas fa-print me-1"></i>Print Receipt
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn {
            display: none !important;
        }

        .receipt-card {
            border: none !important;
            box-shadow: none !important;
        }

        .navbar, .sidebar {
            display: none !important;
        }
    }
</style>