@model IEnumerable<HotelReservationSystem.Models.Reservation>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
        </h1>
        <div class="btn-group">
            <a href="@Url.Action("Create", "Home")" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i>New Reservation
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                <i class="fas fa-home me-1"></i>Home
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count()</h4>
                            <p class="card-text">Total Reservations</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">₱@Model.Sum(r => r.TotalAmount).ToString("N2")</h4>
                            <p class="card-text">Total Revenue</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Average(r => r.NumberOfGuests).ToString("F1")</h4>
                            <p class="card-text">Avg. Guests</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Select(r => r.GuestName).Distinct().Count()</h4>
                            <p class="card-text">Unique Guests</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-friends fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservations Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>All Reservations
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Reservation No</th>
                                <th>Guest Name</th>
                                <th>Room Type</th>
                                <th>Guests</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@item.ReservationNo</span>
                                    </td>
                                    <td>@item.GuestName</td>
                                    <td>
                                        <span class="badge
                                                    @(item.RoomType == "Suite" ? "bg-warning" :
                                                                                            item.RoomType == "Double" ? "bg-info" : "bg-secondary")">
                                    @item.RoomType
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-dark">@item.NumberOfGuests</span>
                            </td>
                            <td>
                                <strong class="text-success">₱@item.TotalAmount.ToString("N2")</strong>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.ReservationId"
                                       class="btn btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Home" asp-action="Receipt" asp-route-id="@item.ReservationId"
                                       class="btn btn-outline-info" title="View Receipt">
                                        <i class="fas fa-receipt"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.ReservationId" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete reservation @item.ReservationNo?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Reservations Found</h4>
                    <p class="text-muted">There are no reservations in the system yet.</p>
                    <a href="@Url.Action("Create", "Home")" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i>Create First Reservation
                    </a>
                </div>
            }
        </div>
    </div>
</div>