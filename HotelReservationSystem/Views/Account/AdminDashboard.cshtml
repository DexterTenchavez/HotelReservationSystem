@model IEnumerable<HotelReservationSystem.Models.Reservation>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var totalRevenue = Model.Sum(r => r.TotalAmount);
    var totalReservations = Model.Count();
    var averageGuests = Model.Any() ? Model.Average(r => r.NumberOfGuests) : 0;
    var uniqueGuests = Model.Select(r => r.GuestName).Distinct().Count();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="text-white">
                    <i class="fas fa-tachometer-alt me-3"></i>Admin Dashboard
                </h1>
                <p class="text-white mb-0">Complete overview of hotel reservations and system analytics</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group">
                    <a href="@Url.Action("Create", "Home")" class="btn btn-light btn-lg">
                        <i class="fas fa-plus-circle me-2"></i>New Reservation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-primary">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-card-label">Total Reservations</div>
                            <div class="stat-card-value">@totalReservations</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check stat-card-icon text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-success">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-card-label">Total Revenue</div>
                            <div class="stat-card-value">₱@totalRevenue.ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave stat-card-icon text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-info">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-card-label">Average Guests</div>
                            <div class="stat-card-value">@averageGuests.ToString("F1")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users stat-card-icon text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-warning">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-card-label">Unique Guests</div>
                            <div class="stat-card-value">@uniqueGuests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends stat-card-icon text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0 font-weight-bold"><i class="fas fa-chart-pie me-2"></i>Room Type Distribution</h6>
                </div>
                <div class="card-body">
                    @{
                        var roomTypes = Model.GroupBy(r => r.RoomType)
                        .Select(g => new { Type = g.Key, Count = g.Count() })
                        .ToList();
                    }
                    @foreach (var roomType in roomTypes)
                    {
                        <div class="progress-chart">
                            <div class="progress-chart-label">
                                <span class="font-weight-bold">@roomType.Type Rooms</span>
                                <span class="progress-chart-value">@roomType.Count reservations</span>
                            </div>
                            <div class="progress" style="height: 20px;">
                                @{
                                    var percentage = totalReservations > 0 ?
                                    (decimal)roomType.Count / totalReservations * 100 : 0;
                                }
                            <div class="progress-bar
                                    @(roomType.Type == "Suite" ? "bg-warning" :
                                                                       roomType.Type == "Double" ? "bg-info" : "bg-success")"
                                 role="progressbar"
                                 style="width: @percentage%">
                                @percentage.ToString("F1")%
                            </div>
                        </div>
                    </div>
                                        }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-bold"><i class="fas fa-chart-bar me-2"></i>Revenue by Room Type</h6>
                </div>
                <div class="card-body">
                    @{
                        var revenueByType = Model.GroupBy(r => r.RoomType)
                        .Select(g => new { Type = g.Key, Revenue = g.Sum(r => r.TotalAmount) })
                        .ToList();
                    }
                    @foreach (var item in revenueByType)
                    {
                        <div class="progress-chart">
                            <div class="progress-chart-label">
                                <span class="font-weight-bold">@item.Type Rooms</span>
                                <span class="progress-chart-value text-success">₱@item.Revenue.ToString("N2")</span>
                            </div>
                            <div class="progress" style="height: 15px;">
                                @{
                                    var revenuePercentage = totalRevenue > 0 ?
                                    (decimal)item.Revenue / totalRevenue * 100 : 0;
                                }
                            <div class="progress-bar
                                    @(item.Type == "Suite" ? "bg-warning" :
                                                                       item.Type == "Double" ? "bg-info" : "bg-success")"
                                 role="progressbar"
                                 style="width: @revenuePercentage%">
                                @revenuePercentage.ToString("F1")%
                            </div>
                        </div>
                    </div>
                                        }
                </div>
            </div>
        </div>
    </div>

    <!-- Reservations Table -->
    <div class="card shadow mb-4">
        <div class="data-table-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-list me-2"></i>All Reservations
                </h5>
                <span class="badge bg-light text-dark">@totalReservations reservations</span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover data-table" width="100%" cellspacing="0">
                        <thead class="table-dark">
                            <tr>
                                <th>Reservation No</th>
                                <th>Guest Name</th>
                                <th>Room Type</th>
                                <th>Guests</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@item.ReservationNo</span>
                                    </td>
                                    <td>
                                        <strong>@item.GuestName</strong>
                                    </td>
                                    <td>
                                        <span class="badge
                                                    @(item.RoomType == "Suite" ? "room-badge-suite" :
                                                                                            item.RoomType == "Double" ? "room-badge-double" : "room-badge-single")">
                                    @item.RoomType
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-dark">@item.NumberOfGuests</span>
                            </td>
                            <td>
                                <strong class="text-success">₱@item.TotalAmount.ToString("N2")</strong>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.ReservationId"
                                       class="btn btn-outline-primary btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Home" asp-action="Receipt" asp-route-id="@item.ReservationId"
                                       class="btn btn-outline-info btn-sm" title="View Receipt">
                                        <i class="fas fa-receipt"></i>
                                    </a>
                                    <form asp-controller="Home" asp-action="Delete" asp-route-id="@item.ReservationId" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete reservation @item.ReservationNo?');" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-calendar-times empty-state-icon"></i>
                    <h4>No Reservations Found</h4>
                    <p>There are no reservations in the system yet.</p>
                    <a href="@Url.Action("Create", "Home")" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus-circle me-1"></i>Create First Reservation
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTable
        $(document).ready(function() {
            $('.data-table').DataTable({
                "pageLength": 10,
                "ordering": true,
                "responsive": true
            });
        });
    </script>
}